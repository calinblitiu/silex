<div class="container">
	<div class="form-group">
	  <input type="text" class="form-control" id="input-post">
	</div>
	<div class="text-right">
		<button type="button" class="btn btn-success" id="btn-post">Post</button>
	</div>

	<div id="posts_div">
		
	</div>
</div>

<script>
var current_no = 1;
$("#btn-post").click(function(){
	var post_value = $("#input-post").val();
	if(post_value == "") {
		alert("Please input post value");
		return;
	}

	$("#posts_div").append(`
		<p> `+
		current_no + `) ` +
		post_value +
		`</p>
	`);

	current_no++;
	$("#input-post").val("");
});
</script>